<div class="result-container">
    <div class="always-shown">
        @ResultIdChildContent
        <div class="content-toogle-btn" @onclick="()=>isHidden=!isHidden">
            @if (isHidden) {
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" width="24" height="24" color="#000000" fill="none">
                    <path d="M18 15C18 15 13.5811 9.00001 12 9C10.4188 8.99999 6 15 6 15" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" />
                </svg>
            }
            else {
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" width="24" height="24" color="#000000" fill="none">
                    <path d="M18 9.00005C18 9.00005 13.5811 15 12 15C10.4188 15 6 9 6 9" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" />
                </svg>
            }
        </div>
    </div>
    <div class="@(isHidden?"result-inputs-content":"hidden-content" )">
    </div>
</div>
@code {
    private bool isHidden = false;
    public void Hide() => isHidden = true;
    [Parameter] public RenderFragment ResultIdChildContent { get; set; }
    [Parameter] public RenderFragment InputsContent { get; set; }
}
