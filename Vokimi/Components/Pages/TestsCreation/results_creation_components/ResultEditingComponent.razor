<div class="result-container">
    <div class="always-shown">
        @ChildContent
        <svg viewBox="0 0 24 24" fill="none"
             class="content-toogle-btn" @onclick="()=>isHidden=!isHidden">
            @if (isHidden) {
                <path d="M18 15C18 15 13.5811 9.00001 12 9C10.4188 8.99999 6 15 6 15"
                      stroke="currentColor" stroke-width="1.5"
                      stroke-linecap="round" stroke-linejoin="round" />
            }
            else {
                <path d="M18 9.00005C18 9.00005 13.5811 15 12 15C10.4188 15 6 9 6 9"
                      stroke="currentColor" stroke-width="1.5"
                      stroke-linecap="round" stroke-linejoin="round" />
            }
        </svg>
    </div>
    <div class="@(isHidden?"hidden-content":"inputs-block-content" )">
        <ResultTextInput @bind-ResultText="ResultForm.Text" />
        <ResultImageInput @bind-ImagePath="ResultForm.ImagePath" />
        <div class="remove-result-btn" @onclick="RemoveResultAction">
            <svg fill="none" viewBox="0 0 50 59" class="bin">
                <path d="M0 7.5C0 5.01472 2.01472 3 4.5 3H45.5C47.9853 3 50 5.01472 50 7.5V7.5C50 8.32843 49.3284 9 48.5 9H1.5C0.671571 9 0 8.32843 0 7.5V7.5Z"></path>
                <path d="M17 3C17 1.34315 18.3431 0 20 0H29.3125C30.9694 0 32.3125 1.34315 32.3125 3V3H17V3Z"></path>
                <path d="M2.18565 18.0974C2.08466 15.821 3.903 13.9202 6.18172 13.9202H43.8189C46.0976 13.9202 47.916 15.821 47.815 18.0975L46.1699 55.1775C46.0751 57.3155 44.314 59.0002 42.1739 59.0002H7.8268C5.68661 59.0002 3.92559 57.3155 3.83073 55.1775L2.18565 18.0974ZM18.0003 49.5402C16.6196 49.5402 15.5003 48.4209 15.5003 47.0402V24.9602C15.5003 23.5795 16.6196 22.4602 18.0003 22.4602C19.381 22.4602 20.5003 23.5795 20.5003 24.9602V47.0402C20.5003 48.4209 19.381 49.5402 18.0003 49.5402ZM29.5003 47.0402C29.5003 48.4209 30.6196 49.5402 32.0003 49.5402C33.381 49.5402 34.5003 48.4209 34.5003 47.0402V24.9602C34.5003 23.5795 33.381 22.4602 32.0003 22.4602C30.6196 22.4602 29.5003 23.5795 29.5003 24.9602V47.0402Z"
                      clip-rule="evenodd"
                      fill-rule="evenodd"></path>
                <path d="M2 13H48L47.6742 21.28H2.32031L2 13Z"></path>
            </svg>
        </div>
    </div>
</div>


@code {
    private bool isHidden = false;
    public void Hide() => isHidden = true;
    [Parameter] public RenderFragment ChildContent { get; set; }
    [Parameter] public Action RemoveResultAction { get; set; }
    [Parameter] public ResultEditingForm ResultForm { get; set; }
}
