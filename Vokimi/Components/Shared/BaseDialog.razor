@inject IJSRuntime JS

<dialog id="@DialogId">
    @ChildContent
</dialog>

@code {
    [Parameter]
    public string DialogId { get; set; }

    [Parameter]
    public RenderFragment ChildContent { get; set; }

    public async Task OpenAsync()
    {
        await JS.InvokeVoidAsync("blazorDialog.openDialog", DialogId);
    }

    public async Task CloseAsync()
    {
        await JS.InvokeVoidAsync("blazorDialog.closeDialog", DialogId);
    }
}
